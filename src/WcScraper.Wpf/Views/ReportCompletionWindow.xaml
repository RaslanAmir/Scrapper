<Window x:Class="WcScraper.Wpf.Views.ReportCompletionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Run complete"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="520">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Manual migration run complete"
                   FontSize="16"
                   FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0,8,0,0">
            <TextBlock Text="Store identifier:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding StoreIdentifier}"/>
            <TextBlock Text="{Binding StoreUrl}"
                       Foreground="Gray"
                       Margin="0,4,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
            <TextBlock Text="Report:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ReportPath}"
                     IsReadOnly="True"
                     Margin="8,0,0,0"
                     MinWidth="320"/>
            <Button Content="Open"
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Click="OnOpenReport"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasManualBundle}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="Manual bundle:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ManualBundlePath}"
                     IsReadOnly="True"
                     Margin="8,0,0,0"
                     MinWidth="320"/>
            <Button Content="Open"
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Click="OnOpenBundle"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasAiBrief}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="AI brief:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Text="{Binding AiBriefPath}"
                     IsReadOnly="True"
                     Margin="8,0,0,0"
                     MinWidth="320"/>
            <Button Content="Open"
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Click="OnOpenAiBrief"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Ask follow-up"
                    Margin="0,0,8,0"
                    Padding="16,6"
                    Click="OnAskFollowUp">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanAskFollowUp}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Close"
                    Padding="16,6"
                    Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
